{
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write main.ts",
    "compile": "deno compile --allow-read --allow-write main.ts --output scribe",
    "install": "deno install --allow-read --allow-write --allow-net --allow-run -g -f main.ts -n scribe"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/cli": "jsr:@std/cli@^1.0.5",
    "@std/flags": "jsr:@std/flags@^0.224.0",
    "@std/fs": "jsr:@std/fs@^1.0.2",
    "@std/path": "jsr:@std/path@^1.0.3"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["./"],
    "exclude": ["notes"]
  }
}
